doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Chapters
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.mb-4.text-center.text-primary Chapters
      .row.justify-content-center
        .col-md-6
          .card.shadow
            .card-body
              form(action="/chapters" method="POST")
                .mb-3
                  label(for="title" class="form-label") Title
                  input(type="text" name="title" id="title" class="form-control" placeholder="Enter chapter title" required)
                .mb-3
                  label(for="content" class="form-label") Content
                  textarea(name="content" id="content" class="form-control" placeholder="Enter chapter content" rows="4" required)
                .mb-3
                  label(for="number" class="form-label") Chapter number
                  input(type="number" name="number" id="number" class="form-control" placeholder="Chapter number" min="1" required)
                .mb-3
                  label(for="bookId" class="form-label") Book ID
                  input(type="text" name="bookId" id="bookId" class="form-control" placeholder="Book ID" required)
                button(type="submit" class="btn btn-primary w-100") Submit